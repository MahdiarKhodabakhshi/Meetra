{
  "name": "meetra",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "concurrently -n web,api -c auto \"pnpm --filter @meetra/web dev\" \"pnpm dev:api\"",
    "dev:web": "pnpm --filter @meetra/web dev",
    "dev:api": "cd apps/api && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",

    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f --tail=200",
    "docker:reset": "docker compose down -v",

    "lint:api": "cd apps/api && make lint",
    "format:api": "cd apps/api && make format",

    "lint": "pnpm -r lint && pnpm lint:api",
    "format": "pnpm -r format && pnpm format:api",

    "db:upgrade": "cd apps/api && make db-upgrade",
    "db:downgrade": "cd apps/api && make db-downgrade",
    "db:revision": "cd apps/api && make db-revision m=\"$(msg)\"",
    "db:current": "cd apps/api && make db-current",
    "db:history": "cd apps/api && make db-history"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.7.4"
  }
}